{
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "@hono/hono/jsx",
    },
    "imports": {
        "$/": "./",
        "@hono/hono": "jsr:@hono/hono@^4.11.9",
        "@std/path": "jsr:@std/path@^1.1.4",
        "@types/fs-extra": "npm:@types/fs-extra@^11.0.4",
        "@types/markdown-it": "npm:@types/markdown-it@^14.1.2",
        "fast-glob": "npm:fast-glob@^3.3.3",
        "fs-extra": "npm:fs-extra@^11.3.3",
        "gray-matter": "npm:gray-matter@^4.0.3",
        "highlight.js": "npm:highlight.js@^11.11.1",
        "markdown-it": "npm:markdown-it@^14.1.0",
        "unocss": "npm:unocss@^66.6.0"
    },
    "tasks": {
        "page": "deno run -A build_page.ts",
        "shell": "deno run -A build_shell.ts",
        "css": "deno run -A npm:@unocss/cli@66.6",
        "all": "rm -rf ./_site && deno task page && deno task shell && deno task css"
    },
    "nodeModulesDir": "auto"
}