{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "NodeNext",      // 또는 "ESNext"
        "moduleResolution": "NodeNext", // 최신 Node.js 경로 해석 방식
        "types": ["node"],         // 명시적으로 node 타입 포함
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}